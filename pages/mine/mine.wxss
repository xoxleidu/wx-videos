page {
    font-size: 14px;
    color: #555;
}

.container {
    background-color: whitesmoke;
    display: flex;
    flex-direction: row;
    height: 350rpx;
}
.container-left{
    flex-direction: column;
    width: 60%;
    margin-left: 20rpx;
}
.container-right{
  position: relative;
    flex-direction: column;
    width: 40%;
    margin-right: 20rpx;
    text-align: right;
}
.container-row {
    display: flex;
    flex-direction: row;
    padding-bottom: 10px;
    padding-top: 10px;
    background-color: rgb(238, 238, 238);
}
.container-xx {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    background-color:whitesmoke;
    font-size: 16px;
    font-weight: bold;
}
.container-row label {
  width: 23%;
  text-align: center;
}

.info-items {
    margin-left: 30px;
}

.face {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin-top: 50rpx;
}

.nickname {
    margin-top: 5px;
    font-weight: bold;
    font-size: 16px;
    padding-left: 50rpx;
}

.nicktext {
    margin-top: 5px;
    font-size: 12px;
    padding-left: 40rpx;
}

.vlogout {
    text-align: right;
    padding-top: 20rpx;
}
.vprimary{
    text-align: right;
    padding-top: 20rpx;
}
.logout {
    background-color:whitesmoke;
    color: rgb(180, 180, 180);
}
.primary{
    background-color: rgb(20, 167, 81);
    color: #fff;
}
.floatright {
    float: right;
}
.vfuhao{
    padding-top: 10rpx;
}
.fuhao{
    width: 110rpx;
    height: 2%;
    font-size: 16rpx;
}
.follow {
    margin-top: 3px;
}

.linex {
    width: 100%;
    height: 1rpx;
    background-color: whitesmoke;
}
.linec {
    width: 90%;
    height: 1rpx;
    background-color: rgb(230, 230, 230);
    margin-left: 30rpx;
}
.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}

.container-video {
    display: flex;
    flex-direction: row;
    margin-top: 20px;
    text-align: center;
    border: solid 1px;
    line-height: 30px;
}

.video-info {
    width: 100%;
}

.video-info-selected {
    background-color: gainsboro;
}

.container-video-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: 10rpx;
    width: 100%;
}

.container-video-row {
  width: 100%;
  text-align: center;
}

.videoImage {
    padding: 5rpx;
    width: 242rpx;
